<h1>New Engineer</h1>

<form action="/engineers" method="post">

    <label for="first-name">First Name</label>
    <input type="text" id="first-name" name="first-name" required="true"/>

    <label for="last-name">Last Name</label>
    <input type="text" id="last-name" name="last-name" required="true">

    <label for="salary">Salary</label>
    <input type="number" id="salary" name="salary">

    <label for="department">Department</label>
    <select id="department" name="department">
        #foreach ($department in $departments)
        <option value="$department.getId()"> $department.getTitle()</option>
        #end
    </select>

    <input type="Submit" value="Save Engineer">

</form>